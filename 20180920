
/* prog1_1, 第一個C程式碼 */ 
#include <stdio.h>
#include <stdlib.h>
int main(void)
{
   printf("Hello C!\n");   	/*Hello C! */
   printf("Hello World!\n");   /*Hello World!  */   
   
   system("pause");
   return 0;
}




